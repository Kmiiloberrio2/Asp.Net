@model IEnumerable<Asp.Net_MVC.Models.Categoria>

@{
    ViewBag.Title = "CategoriasServicio";
}

<h2>CategoriasServicio</h2>

<p>
    @Html.ActionLink("Create New", "RegistrarCategoriaServicio")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Categoria)
        </td>
        <td>
            @Html.ActionLink("Edit", "ModificarCategoriaServicio", new { id=item.ID_Categoria }) |
            @Html.ActionLink("Details", "DetalleCategoriaServicio", new { id=item.ID_Categoria }) |
            @Html.ActionLink("Delete", "EliminarCategoriaServicio", new { id=item.ID_Categoria })
        </td>
    </tr>
}

</table>
